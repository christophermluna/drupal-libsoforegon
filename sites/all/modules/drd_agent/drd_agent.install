<?php

/**
 * @param string $phase
 * @return array
 */
function drd_agent_requirements($phase) {
  $requirements = array();
  if (!empty($_SERVER['HTTP_X_DRD_VERSION'])) {
    _drd_get_lib();
    $requirements = \Drupal\drd\Agent\Remote\V7\Requirements::collect($phase);
  }
  return $requirements;
}
